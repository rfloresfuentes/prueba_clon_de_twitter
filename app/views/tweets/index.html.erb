<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>

<h1 class="my-2">Tweets</h1>
<div class="container text-center mb-2 --bs-body-bg" style="max-width: 20rem;">

  <div class="d_flex justify-content-between">
    <%= form_with url: tweets_path, method: :get do |form| %>
    <div class="row">
      <div class="col-8">
        <%= form.text_field :query_text, placeholder: t('Query text'), value: params[:query_text]%>
      </div>
      <div class="col-2">
        <%= form.submit "Buscar", class:"btn btn-sm btn-secondary" %>
        
      </div>
    </div>
  <%end%>
  <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Usuario</th>
      <th>Tweet</th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.id %></td>
      <td><%= tweet.username %></td>
      <td><%= tweet.description %></td>
      <td class="d-flex">
        <%= link_to "Ver", tweet, class:"btn btn-sm btn-outline-secondary" %>
        <%= link_to "Editar", edit_tweet_path(tweet), class:"btn btn-sm btn-outline-success" %> 
        <%= link_to "Eliminar", tweet, metodh: :delete, class:"btn btn-sm btn-outline-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nuevo Tweet", new_tweet_path, class:"btn btn-sm btn-secondary" %>

